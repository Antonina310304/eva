{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@Api/*": ["./client/Api/*"],
      "@App": ["./client/App"],
      "@Components/*": ["./client/Components/*"],
      "@Contexts/*": ["./client/Contexts/*"],
      "@Hooks/*": ["./client/Hooks/*"],
      "@Mattresses/*": ["./client/Mattresses/*"],
      "@Modals/*": ["./client/Modals/*"],
      "@Pages/*": ["./client/Pages/*"],
      "@Queries/*": ["./client/Queries/*"],
      "@Routes/*": ["./client/Routes/*"],
      "@Templates/*": ["./client/Templates/*"],
      "@Types/*": ["./client/Types/*"],
      "@UI/*": ["./client/UI/*"],
      "@Utils/*": ["./client/Utils/*"]
    },
    "typeRoots": ["./typings", "node_modules/@types"]
  },
  "include": [
    "client/**/*.js",
    "client/**/*.jsx",
    "client/**/*.ts",
    "client/**/*.tsx",
    "server/**/*.js",
    "server/**/*.ts",
    "server/**/*.tsx",
    "typings/**/*.ts",
    "webpack/**/*.ts",
    "utils/**/*.ts",
    "jest.config.js",
    "setupTests.ts",
    "__mocks__/**/*.js",
    "__tests__/**/*.tsx"
  ],
  "exclude": ["dist"]
}
