{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@Alerts/*": ["./client/Alerts/*"],
      "@Api/*": ["./client/Api/*"],
      "@App": ["./client/App"],
      "@Async/*": ["./client/Async/*"],
      "@Cabinet/*": ["./client/Cabinet/*"],
      "@Cart/*": ["./client/Cart/*"],
      "@Components/*": ["./client/Components/*"],
      "@Constructor/*": ["./client/Constructor/*"],
      "@Containers/*": ["./client/Containers/*"],
      "@Contexts/*": ["./client/Contexts/*"],
      "@Footer/*": ["./client/Footer/*"],
      "@Forms/*": ["./client/Forms/*"],
      "@Hooks/*": ["./client/Hooks/*"],
      "@Mattresses/*": ["./client/Mattresses/*"],
      "@Modals/*": ["./client/Modals/*"],
      "@Operator/*": ["./client/Operator/*"],
      "@Order/*": ["./client/Order/*"],
      "@Pages/*": ["./client/Pages/*"],
      "@Popups/*": ["./client/Popups/*"],
      "@Questionnaire/*": ["./client/Questionnaire/*"],
      "@Scandinavian/*": ["./client/Scandinavian/*"],
      "@Sleeper/*": ["./client/Sleeper/*"],
      "@Store/*": ["./client/Store/*"],
      "@Templates/*": ["./client/Templates/*"],
      "@Toplines/*": ["./client/Toplines/*"],
      "@Types/*": ["./client/Types/*"],
      "@Utils/*": ["./client/Utils/*"]
    },
    "typeRoots": ["./typings", "node_modules/@types"]
  },
  "include": [
    "client/**/*.js",
    "client/**/*.jsx",
    "client/**/*.ts",
    "client/**/*.tsx",
    "server/**/*.js",
    "server/**/*.ts",
    "server/**/*.tsx",
    "typings/**/*.ts",
    "webpack/**/*.ts",
    "jest.config.js",
    "setupTests.ts",
    "__mocks__/**/*.js",
    "__tests__/**/*.tsx"
  ],
  "exclude": ["dist"]
}
